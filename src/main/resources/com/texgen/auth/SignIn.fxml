<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.texgen.controllers.SignIn" fx:id="rootPane">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>
    <children>
        <VBox spacing="15" alignment="CENTER">
            <children>
                <Label text="TexGen Login Page" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="150"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="30"/>
                        <RowConstraints minHeight="30"/>
                    </rowConstraints>
                    <children>
                        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="user" promptText="Enter username" text="open" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <PasswordField fx:id="password" promptText="Enter password" text="sesame" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </children>
                </GridPane>

                <Button fx:id="loginButton" text="Login" defaultButton="true" style="-fx-font-size: 14px;"/>
            </children>
        </VBox>
    </children>
</StackPane>
